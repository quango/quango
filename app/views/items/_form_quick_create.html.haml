
= local_assigns[f]
= f.error_messages
= error_messages_for(:user)

-#= f.hidden_field :doctype_id, :value => params(:doctype_id)

-#= javascript_include_merged :show

.quick-create-form{:style=>"width:300px;margin-bottom:16px;/*border:2px outset #{current_group.supplementary}*/"}

  .quick-create-inner{:style=>"width:300px;padding:0 16px 8px 16px;border-radius:8px; "}

    .group{:style=>"width:256px;margin:0px;"}
      = "#{doctype.create_label} - you can add more information in the next step if necessary"

    .group{:style=>"width:256px;margin:0px;"}
      = f.text_area :title, :class => "text_field", :style => "width:256px;margin:0; height:32px;border:2px inset #{current_group.supplementary}"

      .related-item
        %ul.items#related_items
    .clear



    - if !logged_in?
      .group{:style=>"width:256px;margin:0px;"}
        = f.hidden_field :anonymous, :value => "true"
        -#= "Please provide your name or nickname"
        = f.text_field :anonymous_display_name,:value=>"Please provide your name or nickname",:onclick=>"this.value='';",:style=>"width:256px;border:2px inset #{current_group.supplementary};font-weight:bold;color:#{current_group.supplementary};margin:2px 0"
        .note{:style=>"font-size:11px;"}
          = "(So we know what to call you)"

      .group{:style=>"width:256px;margin:0px;"}
        -#= "Please provide your email address so we can notify you when your question is answered"
        = f.text_field :anonymous_email,:value=>"Please provide your email address",:onclick=>"this.value='';",:style=>"width:256px;border:2px inset #{current_group.supplementary};font-weight:bold;color:#{current_group.supplementary};margin:2px 0"
        .note{:style=>"font-size:11px;"}
          = "(So we can notify you with an answer)"

    .group{:style=>"width:256px;margin:0px;"}
      = submit_tag "#{current_group.quick_create_label}", :class => "submit-button", :style => "text-transform:uppercase;letter-spacing:-1px;width:256px;height:32px;margin-top:16px;margin-bottom:4px; float:right;padding:0 16px;"
      .note{:style=>"font-size:11px;font-weight:bold;text-align:center;margin-top:4px"}
        = "We will not share your private information"
  .clear
.clear

-if false
  - if doctype.has_video?
    = f.label :video_link, "#{t(:video_link, :scope => "activerecord.attributes")}", :class => "label", :style => "margin-left: 8px"
    = f.text_field :video_link, :class => "text_field", :style => "width:256px; max-width:256px; margin:0 16px"

    = f.label :video_thumbnail, "#{t(:video_link, :scope => "activerecord.attributes")}", :class => "label", :style => "margin-left: 8px"
    = f.text_field :video_thumbnail, :class => "text_field", :style => "width:256px; max-width:256px; margin:0 16px"


  = f.label :body, t(:body, :scope => "activerecord.attributes.item"), :class => "label", :style=>"margin:16px 0 0 0"

  .group{:style=>"width:256px;padding:8px; background:#bcbcbc;border-radius:4px 4px 0 0;"}

    = f.text_area :body, :class => "text_area", :id => "markdown_editor", :style => "height:128px;min-height:128px; width:256px; max-width:256px;"








