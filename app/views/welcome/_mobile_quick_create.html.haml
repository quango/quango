- expanded = local_assigns[:expanded]
#fold
  .fold
    .left{:style=>"margin-left:16px;"}
      %h2
        = "How can we help?"

    .right{:style=>"width:64px;margin-right:16px;"}
      %a.show_quick_create{:class => "navlinks showhide left", :style=>"color:white"}
        = "<img src='/images/blank_icon.png' height='64px' width='64px'/>"
      %a.hide_quick_create{:class => "navlinks showhide left", :style=>"color:white"}
        = "<img src='/images/blank_icon_o.png' height='64px' width='64px'/>"



  .clear
  .quick-create
    = render :partial => "shared/quick_create_mobile"

  %script{:type => "text/javascript"}
    = "// collapse:"
    = "$('.hide_quick_create').click(function() {"
    = "$('.hide_quick_create').css('display','none');"
    = "$('.show_quick_create').css('display','block');"
    = "$('.quick-create').hide('fast');"
    = "});"
    = "// expand:"
    = "$('.show_quick_create').click(function() {"
    = "$('.show_quick_create').css('display','none');"
    = "$('.hide_quick_create').css('display','block');"
    = "$('.quick-create').show().effect(\"bounce\",{times:3},300);"
    = "$('.hide_contact').css('display','none');"
    = "$('.show_contact').css('display','block');"
    = "$('.contact').hide('fast');"
    = "});"
    = "// ok so far"
    = "$('.hide_quick_create').css('display','none');"
    = "$('.show_quick_create').css('display','block');"
    = "$('.quick-create').hide();"





