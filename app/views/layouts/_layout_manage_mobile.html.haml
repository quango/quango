
- debug = params[:debug]

!!! Strict
%html{"xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    = "<meta http-equiv=\"content-type\" content=\"text/html; charset=utf-8\" />"
    = "<meta http-equiv=\"cache-control\" content=\"public\" />"
    = "<meta http-equiv=\"content-language\" content=\"en\" />"
    = render :partial => "layouts/ua"

    %title
      &= page_title

    = render :partial => "shared/layout/css_mobile"
    = javascript_include_merged :mobile
    = yield :custom_javascript
    = yield :js

    = current_group.head_tag

  %body{:style=>"background:#{current_group.primary_dark};font-family:sans-serif;color:#{current_group.text_colour};margin:0;"}
    = render :partial => "shared/analytics"



    = render :partial => "shared/header_mobile"

    = render :partial => "shared/title_mobile"


    #body
      = yield

    #flash
      .container
        = show_flash_messages(:class => "flash", :markdown => true)

    #footer{:style=>"position:relative;bottom:0px;left:0px;"}
      = render :partial => "layouts/footer_mobile"

    - if debug
      #debug
        = render :partial => "layouts/debug"
